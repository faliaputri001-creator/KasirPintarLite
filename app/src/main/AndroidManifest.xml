<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin Dasar -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Izin untuk Android 13 ke atas agar Notifikasi Muncul (Mencegah Crash di NotificationHelper) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Izin Simpan File (Jika melakukan Export PDF/Excel) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KasirPintarLite"
        tools:targetApi="31">

        <activity
            android:name=".ui.transaction.history.detail.TransactionDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.product.AddEditProductActivity"
            android:exported="false" /> <!-- SPLASH SCREEN (LAUNCHER) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LOGIN -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" /> <!-- REGISTER -->
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" /> <!-- MAIN -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>